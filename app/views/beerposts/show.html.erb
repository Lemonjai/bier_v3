<%= link_to "Edit", edit_beerpost_path(@beerpost) %>
<%= link_to "Delete", beerpost_path(@beerpost), method: :delete, data: {confirm: "Are you sure you want to delete this post?"} %>

<div id="post_show_content" class="skinny_wrapper wrapper_padding">
    <header>
      <p class="date"><%= @beerpost.created_at.strftime('%A, %B, %d') %></p>
      <h1><%= @beerpost.title %></h1>
      <hr>
    </header>

    <div id="content">
      <strong>Image:</strong>
      <%= image_tag @beerpost.image.thumb.url %>
    </div>

    <hr>

    <div id="share_box">
      <p><%= @beerpost.title %></p>
      <!-- Twitter Share -->
      <a onclick="javascript:window.open('https://twitter.com/share?text=<%= @beerpost.title%> by @dod - &amp;url=<%= url_for([@beerpost, {only_path: false}])%>', '_blank','width=800,height=500, top=200, left=300');void(0);"><i class="fa fa-twitter"></i></a>
      <!-- Facebook Share -->
      <a onclick="javascript:window.open('http://www.facebook.com/sharer.php?u=<%= url_for([@beerpost, {only_path: false}])%>', '_blank','width=800,height=500, top=200, left=300');void(0);"><i class="fa fa-facebook"></i></a>
      <!-- Google + Share -->
      <a onclick="javascript:window.open('https://www.plus.google.com/share?url=<%= url_for([@beerpost, {only_path: false}])%>', '_blank','width=800,height=500, top=200, left=300');void(0);"><i class="fa fa-google-plus"></i></a>
    </div>

    <hr>